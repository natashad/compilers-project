	% a program that test conditional expressions.
	
	var rect_width : integer
	var rect_height : integer
	var rect_area : integer
	var tri_base : boolean
	var tri_height : integer
	var tri_area : boolean
	
	
	func test():integer {
        result 5
    }
    
    func test3():boolean {
        result true
    }
    
    rect_width := 5
	rect_height := 10
	tri_base := true
	tri_height := (tri_base ? rect_width : rect_height)
	tri_area := (test3() ? tri_base : false )
	tri_height := ( (rect_width > rect_height) ? (rect_width * rect_height) - rect_height  : (rect_width * (test() + rect_area)) - rect_height)
}